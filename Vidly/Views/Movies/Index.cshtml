@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("NEW MOVIE", "New", null, new { @class="btn btn-primary" })

@if (!Model.Any())
{
    <p>No movies here.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movies in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movies.Name, "Edit", new { id = movies.Id })</td>
                    <td>@movies.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}


